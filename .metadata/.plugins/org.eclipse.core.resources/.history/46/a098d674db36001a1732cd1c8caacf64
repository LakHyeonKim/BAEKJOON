
public class Main {
	private static int[][] map;
	private static int[][] dir = {{0,1},{-1,0},{0,-1},{1,0}};

	public static void main(String[] args) {
		int N = 7;
		map = new int[N][N];
		int total = N * N;
		int step = 1;
		int count = 0;
		int startI = N/2;
		int startJ = N/2;
		map[startI][startJ] = 1;
		print(N);
		while(count <= total) {
			if(step % 2 != 0) {
				for(int i = 0; i < 2; i++) {
					for(int j = 0; j < step; j++) {
						startI += dir[i][0];
						startJ += dir[i][1];
						map[startI][startJ] = (++count) + 1;
						print(N);
					}
				}
			} else {
				for(int i = 2; i < 4; i++) {
					for(int j = 0; j < step; j++) {
						startI += dir[i][0];
						startJ += dir[i][1];
						map[startI][startJ] = (++count) + 1;
						print(N);
					}
				}
			}
			step++;
		}
		print(N);

	}
	private static void print(int N) {
		for(int i = 0; i < N; i++) {
			for(int j = 0; j < N; j++) {
				System.out.print(map[i][j] + " ");
			}
			System.out.println();
		}
		System.out.println();
	}

}
